@using PokemonBattleSimulator.Models.Enum;
@model PokemonModel

<div id="pokemon-details" class="row">
    <div class="col-auto">
        <div class="pokemon-header">
            @Html.LabelFor(m => m.Id)
        </div>
        <div id="pokemon-id" class="pokemon-detail">
            @Html.DisplayFor(m => m.Id)
        </div>
    </div>
    <div class="col-auto">
        <div class="pokemon-header">
            @Html.LabelFor(m => m.PrimaryType)
        </div>
        <div class="pokemon-detail">
            @Html.DisplayFor(m => m.PrimaryType)
        </div>
    </div>
    @if(Model.SecondaryType != Typing.None){
        <div class="col-auto">
            <div class="pokemon-header">
                @Html.LabelFor(m => m.SecondaryType)
            </div>
            <div class="pokemon-detail">
                @Html.DisplayFor(m => m.SecondaryType)
            </div>
        </div>
    }
    <div class="col-auto">
        <div class="pokemon-header">
            @Html.LabelFor(m => m.Stats)
        </div>
        <div>
            @Html.Partial("_Stats", Model.Stats)
        </div>
    </div>
    <div class="col-auto">
        <div class="pokemon-header">
            @Html.LabelFor(m => m.Moves)
        </div>
        <div>
            @Html.Partial("_Moves", Model.Moves)
        </div>
    </div>
</div>

